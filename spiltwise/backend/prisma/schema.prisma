generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  email     String
  username  String    @unique
  password  String
  MoneyOwe  Float
  MoneyLent Float
  lendTo    Json
  oweTo     Json
  Expenses  Expense[]
  groups    Group[]   @relation("GroupToUser")
  groupToUser GroupToUser[]
}

model Group {
  id         String    @id @default(uuid())
  createdAt  DateTime  @default(now())
  TotalSpent Float
  Name       String
  authorId   String
  Expenses   Expense[]
  users      User[]    @relation("GroupToUser")
  groupToUser GroupToUser[]
}

model Expense {
  id        String   @id @default(uuid())
  Name      String
  createdBy String
  createdAt DateTime @default(now())
  Total     Float
  DivideTo  Json
  authorId  String   @default("0")
  groupId   String   @default("0")
  Lent      Json
  Owes      Json
  author    User     @relation(fields: [authorId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id])
}

model GroupToUser {
  userId  String
  groupId String
  user    User   @relation(fields: [userId], references: [id])
  group   Group  @relation(fields: [groupId], references: [id])

  @@id([userId, groupId])
}