generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User{
  id String @default(uuid()) @id
  createdAt DateTime @default(now())
  email String
  username String  @unique
  password String
  MoneyOwe Float
  MoneyLent Float
  Groups Group[]
  Expenses Expense[]
  lendTo Json
  oweTo Json
}

model Group{
  id String @id @default(uuid())
  Name String
  createdAt DateTime @default(now())
  TotalSpent Float
  Users User[]
  Expenses Expense[]
}

model Expense{
  id String @id @default(uuid())
  Name String
  createdBy String
  createdAt DateTime @default(now())
  Total Float
  DivideTo String[]
  author User @relation(fields:[authorId],references: [id]) 
  authorId String @default("0")
  group Group @relation(fields: [groupId], references: [id])
  groupId String @default("0")
  
}